<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.varun.android.listview.fragments.ThisDayFragment"
    >

    <ImageButton
        android:id="@+id/fg_thisday_btn_select_date"
        android:layout_width="36dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/ic_date_red_black_24dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#00000000"
        android:layout_marginLeft="16dp"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/fg_thisday_et_date"
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="DD-MM-YYYY"
        android:inputType="date"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fg_thisday_btn_add_reminder"
        app:layout_constraintLeft_toRightOf="@+id/fg_thisday_btn_select_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/fg_thisday_btn_add_reminder"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/ic_add_circle_pink_24dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fg_thisday_et_date"
        android:backgroundTint="#00000000"
        app:layout_constraintHorizontal_bias="0.782"
        android:padding="20dp"
        />

</android.support.constraint.ConstraintLayout>
