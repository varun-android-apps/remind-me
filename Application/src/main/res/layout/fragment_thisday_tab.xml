<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.varun.android.listview.fragments.ThisDayFragment">

    <ImageButton
        android:id="@+id/fg_thisday_btn_select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/calendar_button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp" />

    <EditText
        android:id="@+id/fg_thisday_et_date"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteY="58dp"
        tools:layout_editor_absoluteX="103dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="111dp"
        android:layout_height="96dp"
        app:srcCompat="@mipmap/plus_sign_pink"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="196dp" />

</android.support.constraint.ConstraintLayout>
